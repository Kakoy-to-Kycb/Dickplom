<Page x:Class="Lopushok.Pages.PageWelcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lopushok.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageWelcome">

    <Grid>
        <StackPanel Margin="20">
            <Label Content="Авторизация" FontSize="35" HorizontalAlignment="Center"/>
            <Separator/>
            <Label Content="Логин" FontSize="30" Margin="130,0"/>
            <TextBox Name="tbUserLogin" Height="35" Width="500"/>
            <Label Content="Пароль" FontSize="30" Margin="130,0"/>
            <PasswordBox Name="pbPassword" Height="35" Width="500"/>
        </StackPanel>
        <Button Name="btnProducts" Content="Вход" Click="btnProducts_Click" VerticalAlignment="Bottom" Margin="0,0,0,30"/>
    </Grid>
</Page>
